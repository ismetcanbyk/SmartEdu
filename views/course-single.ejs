<%- include('partials/_header') %>

	<%- include('partials/_navigation') %>

		<div class="all-title-box">
			<div class="container text-center">
				<h1>
					<%= course.name %><span class="m_1"></span>
				</h1>
			</div>
		</div>

		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 blog-post-single">
						<div class="blog-item">
							<div class="image-blog">
								<img src="/images/blog_single.jpg" alt="" class="img-fluid">
							</div>
							<div class="post-content">
								<div class="post-date">
									<span class="day">
										<%= course.createdAt.toString().slice(8, 10) %>
									</span>
									<span class="month">
										<%= course.createdAt.toString().slice(4, 7) %>
									</span>

									<% if(user && !(user.courses.includes(course._id))) { %>
										<form class="mt-5 " method="POST" action="/courses/enroll">
											<input type="hidden" name="course_id" value="<%= course._id %>">
											<button
												class="btn btn-lg btn-warning text-white"><span>ENROLL</span></button>
										</form>
										<% } %>
								</div>
								<div class="meta-info-blog">
									<span><i class="fa fa-calendar"></i> <a href="#">
											<%= course.createdAt.toString().slice(0, 15) %>
										</a> </span>
								</div>
								<div class="blog-title">
									<h2><a href="#" title="">
											<%= course.name %>
										</a></h2>
								</div>
								<div class="blog-desc">
									<p>
										<%= course.description %>
									</p>
								</div>

							</div>

						</div>
						<h1 class="h1 mt-4 "> Created by : <span class="author_name">
								<%=course.user.name%>
							</span>
						</h1>




					</div><!-- end col -->

				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->

		<%- include('partials/_footer') %>